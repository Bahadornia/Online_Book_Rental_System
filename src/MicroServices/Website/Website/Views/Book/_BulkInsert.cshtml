@using Microsoft.AspNetCore.Mvc.Localization
@model BulkInsertViewModel;
@inject IViewLocalizer Localizer;

<form asp-action="BulkInsert" asp-controller="Book">
    @Html.AntiForgeryToken()
    <div class="row mb-2">
        <div class="col d-flex justify-content-between align-items-center">
            <div class="col-3">
                <label for="excelFile">@Localizer["BulkUpload"]</label>
                <input id="excelFile" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" hidden type="file" class="form-control" name="file" value="" />
                <input type="button" class="form-control mb-2" onclick="onSelectFile()" placeholder="@Localizer["ChooseFile"]" />
            </div>
            <div class="col-2 d-flex justify-content-end">
                <button style="background-color:#0B8245; color:white; height:40px" type="submit" class="btn btn-sm">@Localizer["FileUpload"]<span class="mx-2"><i class="fa fa-file-excel-o" aria-hidden="true"></i></span></button>

            </div>
        </div>
    </div>
</form>