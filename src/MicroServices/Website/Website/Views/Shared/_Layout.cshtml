@{
    var isAdmin = User.IsInRole("Admin");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Website.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/ag-grid-enterprise/styles/ag-grid.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/ag-grid-enterprise/styles/ag-theme-alpine.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fonts/font-awesome/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/styles/theme-default.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/select2/css/select2-bootstrapper.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Website</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div>
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="AddBook">افزودن کتاب</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">لیست سفارشات</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">لیست کتابها</a>
                            </li> 
                            
                            <li style="position : relative" class="nav-item d-flex align-items-center">
                                <span><i class="fa fa-bell-o fa-lg" aria-hidden="true"></i></span>
                                <span id="notification-badge" class="notification-badge">0</span>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <ul class="navbar-nav flex-grow-1">
                            @if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated || true)
                            {
                                <li class="nav-item">
                                    <button id="logoutButton" class="nav-link text-dark">logout</button>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" dir="rtl">
        <main role="main" class="pb-3">
            @RenderBody()
            <div class="row">
                <div class="col-12" style="height: @(isAdmin ? "500px":"calc(100vh - 150px)") ">
                    <div id="agGrid" style="height: 100%; width: 100%;" class="ag-theme-alpine" dir="rtl"></div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Website - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await Html.PartialAsync("_Logout")
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true" defer></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true" defer></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true" defer></script>
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js" asp-append-version="true" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/lib/ag-grid-enterprise/dist/ag-grid-enterprise.min.noStyle.js" asp-append-version="true" defer></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.min.js" asp-append-version="true" defer></script>
    <script src="~/lib/microsoft-signalr/signalr.min.js" asp-append-version="true" defer></script>
    <script src="~/lib/select2/js/select2.min.js" asp-append-version="true" defer></script>
    <script type="module" src="~/js/app.min.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
